                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="price:"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>
        <LinearLayout
