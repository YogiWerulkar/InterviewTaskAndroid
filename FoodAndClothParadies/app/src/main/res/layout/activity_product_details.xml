                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/text_product_buyable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
